<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Editar Campamento</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="needs-validation"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Nombre</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%=campground.title %>" required>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese un título
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Ubicación</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=campground.location %>" required>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese una ubicación
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Precio</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>"
                            required>
                        <div class="valid-feedback">
                            Todo correcto!
                        </div>
                        <div class="invalid-feedback">
                            Por favor, ingrese un precio correcto
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Descripción</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%= campground.description%></textarea>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese una descripción
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Añadir foto(s)</label>
                    <input type="file" name="image" id="formFile" class="form-control" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) {  %>
                    <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Borrar?</label>
                    <% })%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Actualizar campamento</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Regresar</a>

        </div>
    </div>