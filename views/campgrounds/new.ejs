<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Nuevo Campamento</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Nombre:</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese un título
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Ubicación:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese una ubicación
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Escoja foto(s)</label>
                    <input type="file" name="image" id="formFile" class="form-control" multiple>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Precio:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Todo correcto!
                        </div>
                        <div class="invalid-feedback">
                            Por favor, ingrese un precio correcto
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Descripción:</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Todo correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, ingrese una descripción
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Crear</button>
                </div>
            </form>
        </div>
    </div>